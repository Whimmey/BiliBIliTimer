{
    "name": "Bilibili Video Timer",
    "version": "2.0.0",
    "manifest_version": 3,
    "description": "Calculate the rest time of the videos.",
    "icons": {
        "16": "icons/timeline.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icons/timeline.png"
    },
    "permissions": [
        "activeTab",
        "tabs",
        "contextMenus",
        "storage",
        "notifications"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.bilibili.com/video/*"
            ],
            "js": [
                "./js/content.js",
                "./js/calTime.js"
            ]
        }
    ],
    "options_page": "options.html",
    "background": {
        "service_worker": "js/background.js"
    },
    "//": {
        "note": "JSON does not support comments, so this field is used to add comments.",
        "permissions": [
            "https://*/*",
            "http://*/*",
            "contextMenu右键菜单",
            "storage本地存储粘贴板操作"
        ],
        "matches": [
            "*://*/*"
        ]
    },
    "update_url": "https://raw.githubusercontent.com/Whimmey/BiliBiliTimer/main/updates.xml",
    "author": "Whimmey"
}